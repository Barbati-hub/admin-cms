@model IEnumerable<admin_cms.Models.Dominio.Entidades.Pagina>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
           
            <th>
              Area Restrita
            </th>
            <th>
               É uma Pagina de Login ?
            </th>
            <th>
                É uma Página Home ?
            </th>
            <th>
               Ordem de como mostra as páginas
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
          
            <td>
                @(item.AreaRestrita ? "Sim" : "Não")
            </td>
            <td>
                   @(item.Login ? "Sim" : "Não")               
            </td>
            <td>
                   @(item.Home ? "Sim" : "Não")             
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ordem)
            </td>
            <td>
                 <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
